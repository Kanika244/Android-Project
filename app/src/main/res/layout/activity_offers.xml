<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available Offers"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- GridLayout to display offers in a grid-like structure -->
    <GridLayout
        android:id="@+id/offersGridLayout"
        android:layout_width="match_parent"
        android:layout_height="672dp"
        android:layout_gravity="center"
        android:columnCount="2"
        android:padding="16dp"
        android:rowCount="3">

        <!-- Offer buttons will be added dynamically -->
        <LinearLayout
            android:layout_width="347dp"
            android:layout_height="132dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/border"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="329dp"
                android:layout_height="66dp"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Get 20%OFF up to Ruppees 1000        HIKE50"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Tap to Apply" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_row="1"
            android:layout_column="0"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/textView"
                android:layout_width="329dp"
                android:layout_height="66dp"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Get 30%OFF up to Ruppees 2000        HIKE50"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Tap to Apply" />


        </LinearLayout>


    </GridLayout>
</LinearLayout>
