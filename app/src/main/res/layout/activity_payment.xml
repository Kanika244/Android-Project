<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#113450"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="362dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:text="Complete The Payment!"
            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="549dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="#37718C"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/qrImageView"
            android:layout_width="match_parent"
            android:layout_height="332dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/scanner" />

        <TextView
            android:id="@+id/amountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Amount to Pay: $0.00"
            android:textSize="18sp" />

        <Button
            android:id="@+id/scanButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Scan QR Code" />

        <Button
            android:id="@+id/offersButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Discounts and Offers" />
    </LinearLayout>



</LinearLayout>
